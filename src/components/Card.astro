---
const {name, fullWidth} = Astro.props;
const snippet = (await import(`../../snippets/${name}/index.js`)).default;
---
<div class="s-card">
  <div class:list={['s-card-body', { 'w-full': fullWidth }]} set:html={snippet.html.default}></div>
  <div class="s-card-footer"><h4>{name.replaceAll("-", " ")}</h4></div>
  <a href={`/snippets/${name}`}></a>
</div>