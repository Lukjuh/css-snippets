---
import "../../snippets/button/index.css";
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card.astro";
---

<BaseLayout>
	<div class="container py-8">
		<div class="intro">
			<h2>A collection of CSS snippets to help you build common interfaces.</h2>
		</div>
		<div class="stack-y gap-8">
			<section class="stack-y">
				<h2>Buttons</h2>
				<div class="auto-grid">
					<Card name="button" />
				</div>
			</section>
		</div>
	</div>
</BaseLayout>